<Application x:Class="Blindodon.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Styles for Accessibility -->
            <Style TargetType="Button" BasedOn="{StaticResource AccessibleButtonStyle}"/>
            <Style TargetType="TextBox" BasedOn="{StaticResource AccessibleTextBoxStyle}"/>
            <Style TargetType="ListBox" BasedOn="{StaticResource AccessibleListBoxStyle}"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
